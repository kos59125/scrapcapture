<Window x:Class="RecycleBin.ScrapCapture.MainWindow"
		  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		  xmlns:system="clr-namespace:System;assembly=mscorlib"
		  xmlns:local="clr-namespace:RecycleBin.ScrapCapture"
		  Title="ScrapCapture" Height="480" Width="720" Icon="/ScrapCapture;component/Images/icon.ico">
	<Window.Resources>
		<x:ArrayExtension Type="{x:Type system:Object}" x:Key="noSelectionItem">
			<MenuItem Header="ウィンドウが見つかりません" IsEnabled="False" />
		</x:ArrayExtension>
	</Window.Resources>
	<Window.ContextMenu>
		<ContextMenu>
			<MenuItem Header="ウィンドウを選択" x:Name="selectWindowMenuItem" SubmenuOpened="selectWindowMenuItem_SubmenuOpened">
				<CollectionContainer Collection="{StaticResource noSelectionItem}" />
			</MenuItem>
			<Separator />
			<MenuItem Header="半透過ウィンドウ" IsCheckable="True" IsChecked="{Binding Path=AeroGlass}" />
		</ContextMenu>
	</Window.ContextMenu>
	<Canvas x:Name="canvas">
	</Canvas>
</Window>
